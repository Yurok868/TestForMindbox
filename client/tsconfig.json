{
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ Обязательно
    "esModuleInterop": true, // ✅ Рекомендуется, особенно для Jest
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src", "test"] // ✅ Убедись, что папка с тестами включена
}
